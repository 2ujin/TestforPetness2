<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:paddingTop="13dp"
        android:paddingBottom="13dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:src="@drawable/toolbar_logo"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="12dp">
        <ImageButton
            android:id="@+id/tab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab1_o"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:background="@color/blue"
            android:layout_gravity="center"
            />
        <ImageButton
            android:id="@+id/tab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab2_o"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="TAB2"/>
        <ImageButton
            android:id="@+id/tab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab3_o"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="TAB3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/tabbtn1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="3.3dp"
            android:background="@color/btnbgcolor"/>
        <Button
            android:id="@+id/tabbtn2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="3.3dp"
            android:background="@color/btnbgcolor"/>
        <Button
            android:id="@+id/tabbtn3"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="3.3dp"
            android:background="@color/btnbgcolor"/>
    </LinearLayout>

</LinearLayout>
